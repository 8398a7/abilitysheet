.center
  h2 ノマゲ参考表
  p.btn.btn-primary CLEAR
  = link_to 'HARD', hard_sheets_path, class: 'btn btn-danger', data: { 'no-turbolink': true }
  br
  br
  = render 'statistics'
- width , height = 150, 50
table.table.table-responsive.table-bordered
  thead
  tbody
    = render 'shared/state_example'
    - cnt = 0
    - (0..19).each do |ab|
      tr
        - if cnt < @sheets.size && @sheets[cnt].ability == ab
          th colspan=5 height=10 bgcolor="#f5deb3"
            center = @power[ab][0]
      - while cnt < @sheets.size && ab == @sheets[cnt].ability
        tr
        - (1..5).each do |i|
          - s = @sheets[cnt]
          - if cnt < @sheets.size && ab == s.ability
            td width=width height=height align="center" bgcolor=@color[s.id] class=s.version name="music"
              = link_to_if !current_user.nil? && current_user.iidxid == params[:iidxid], s.title, scores_path(s.id, 0), remote: true
            - cnt += 1
